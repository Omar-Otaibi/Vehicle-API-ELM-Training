<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001-create-full-schema-v2" author="omar">

        <createTable tableName="owner">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="vehicles">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="brand" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="model" type="VARCHAR(20)"/>

            <column name="year" type="INT"/>

            <column name="plate" type="VARCHAR(6)">
                <constraints unique="true" uniqueConstraintName="uk_vehicles_plate"/>
            </column>

            <column name="vin" type="VARCHAR(17)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_vehicles_vin"/>
            </column>

            <column name="owner_id" type="BIGINT">
                <constraints foreignKeyName="fk_vehicle_owner" references="owner(id)"/>
            </column>

            <column name="created" type="DATETIMEOFFSET" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="last_modified" type="DATETIMEOFFSET" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="version" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>